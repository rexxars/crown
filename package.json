{
  "name": "crown",
  "version": "1.0.0",
  "description": "Microservice that scrapes websites, extracting key information such as title, description, opengraph information etc",
  "main": "src/crown.js",
  "scripts": {
    "dev": "remon --require babel-core/register src/crown.js",
    "lint": "eslint .",
    "posttest": "npm run lint",
    "start": "node --require babel-core/register src/crown.js",
    "test": "TEST=1 nyc --reporter=lcov --reporter=text ava"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/bengler/crown.git"
  },
  "keywords": [
    "crown",
    "extract",
    "scrape",
    "metadata",
    "microservice",
    "api"
  ],
  "author": "Bengler AS",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/bengler/crown/issues"
  },
  "homepage": "https://github.com/bengler/crown#readme",
  "dependencies": {
    "@bengler/pebbles-client": "github:bengler/pebbles-client.js",
    "babel-eslint": "^5.0.0-beta6",
    "babel-plugin-array-includes": "^2.0.3",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-react": "^6.3.13",
    "boom": "^3.1.2",
    "cheerio": "^0.19.0",
    "es6-error": "^2.0.2",
    "hapi": "^12.1.0",
    "hostname-is-private": "^2.0.6",
    "joi": "^7.2.2",
    "lodash": "^4.0.1",
    "memcached": "^2.2.1",
    "microdata-node": "^0.2.1",
    "request": "^2.67.0",
    "wreck": "^7.0.0"
  },
  "devDependencies": {
    "ava": "^0.11.0",
    "eslint": "^1.10.3",
    "eslint-config-bengler": "^0.5.5",
    "eslint-plugin-react": "^3.16.1",
    "nyc": "^5.5.0",
    "remon": "^1.0.2"
  },
  "ava": {
    "verbose": true,
    "require": [
      "babel-core/register"
    ]
  }
}
