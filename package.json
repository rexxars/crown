{
  "name": "@rexxars/crown",
  "version": "2.0.0-beta1",
  "description": "Microservice that scrapes websites, extracting key information such as title, description, opengraph information etc",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/crown.js",
    "test": "NODE_ENV=test jest && npm run lint",
    "lint": "eslint .",
    "coverage": "jest --coverage",
    "precommit": "lint-staged",
    "dev": "nodemon src/crown.js --no-update-notifier | pino"
  },
  "engines": {
    "node": ">=7.6.0"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write --no-semi --print-width 100 --no-bracket-spacing --single-quote",
      "eslint",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/rexxars/crown.git"
  },
  "keywords": [
    "crown",
    "extract",
    "scrape",
    "metadata",
    "microservice",
    "api"
  ],
  "author": "Espen Hovlandsdal <espen@hovlandsdal.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rexxars/crown/issues"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "bracketSpacing": false
  },
  "homepage": "https://github.com/rexxars/crown#readme",
  "dependencies": {
    "boom": "^5.2.0",
    "celebrate": "^4.0.3",
    "cheerio": "^1.0.0-rc.2",
    "cors": "^2.8.4",
    "es6-error": "^4.0.2",
    "express": "^4.15.4",
    "get-it": "^2.1.3",
    "hostname-is-private": "^2.0.6",
    "joi": "^10.6.0",
    "lodash": "^4.0.1",
    "microdata-node": "^0.2.1",
    "pino": "^4.7.1"
  },
  "devDependencies": {
    "eslint": "^4.5.0",
    "eslint-config-prettier": "^2.3.0",
    "eslint-config-sanity": "^2.1.4",
    "husky": "^0.14.3",
    "jest": "^20.0.4",
    "lint-staged": "^4.0.4",
    "nodemon": "^1.11.0",
    "prettier": "1.5.0",
    "supertest": "^3.0.0"
  },
  "jest": {
    "verbose": true,
    "testEnvironment": "node",
    "globals": {
      "__TEST__": true
    },
    "setupFiles": [
      "./test/setup.js"
    ],
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**.js",
      "!src/crown.js"
    ]
  }
}
